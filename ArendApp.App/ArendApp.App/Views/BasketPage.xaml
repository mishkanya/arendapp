                                                        <Span Text="₽"/>
                                                    </FormattedString.Spans>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Grid>
                                    <Button Text="Убрать" Command="{Binding Source={x:Reference PageSelf}, Path=DeleteFromBasketCommand}" CommandParameter="{Binding Id}"  Grid.Row="2"/>
                                    
                                </Grid>
